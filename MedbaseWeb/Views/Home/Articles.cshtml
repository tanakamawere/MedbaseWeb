@model IEnumerable<MedbaseWeb.Models.Article>
@{
    ViewData["Title"] = "Articles | Free Anatomy and Physiology MCQs";
    ViewData["Description"] = "We share the best studying techniques, review medical material, discuss mental health and other bits to make your medical journey a resounding success.";
     ViewData["Thumbnail"] = "http://medbase.co.zw/img/articles_thumbnail.jpeg";
    ViewData["Keywords"] = "Medical Blog, Articles, Study, Anatomy, Physiology, School, College, University";
}

<!-- Header-->
<header class="bg-white py-5">
    <div class="container px-5">
        <div class="row gx-5 align-items-center justify-content-center">
            <div class="col-lg-8 col-xl-4 col-xxl-4">
                <div class="my-5 text-center text-xl-start">
                    <h1 class="display-5 fw-bolder text-dark mb-2"
                        style="font-size:4.75rem">
                        Articles
                    </h1>
                    <p class="lead fw-normal text-black-50 mb-4">
                         Welcome to our Articles. 
                         New articles every <em>Monday at 6pm</em>, touching on topics like psychology, money, studying and book reviews.
                    </p>
                </div>
            </div>
            <div class="col-xl-8 col-xxl-8 text-center">
                <img class="img-fluid rounded-3 my-5"
                     src="~/img/article.svg" alt="..." />
            </div>
        </div>
    </div>
</header>

<!--Ad unit N2-->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7010150994074481"
            crossorigin="anonymous"></script>
    <!-- Flat Ad Unit -->
    <ins class="adsbygoogle"
            style="display:block"
            data-ad-client="ca-pub-7010150994074481"
            data-ad-slot="6187172230"
            data-ad-format="auto"
            data-full-width-responsive="true"></ins>
    <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
    </script>

<div class="row gx-5">
            @foreach(Article item in Model)
                {
                        <div class="col-lg-4 mb-5">
                            <div class="card h-100 shadow border-0">
                                <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.ImageURL)" alt="..." />
                                <div class="card-body p-4">
                                    <a class="text-decoration-none link-dark stretched-link" asp-action="ArticleView" asp-route-id="@item.Id">
                                        <h5 class="card-title mb-3">
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </h5>
                                    </a>
                                    <p class="card-text mb-0">
                                        @Html.DisplayFor(modelItem => item.Summary)
                                    </p>
                                </div>
                                <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
                                    <div class="d-flex align-items-end justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <div class="small">
                                                <div class="fw-bold">@Html.DisplayFor(modelItem => item.Writer)</div>
                                                <div class="text-muted">
                                                @{
                                                    string? returnDate = "";
                                                    DateTime date = item.DatePosted;
                                                    int dateDiff = (DateTime.Today - date).Days;

                                                    if (date == DateTime.Today)
                                                    {
                                                        returnDate = "Posted Today";
                                                    }
                                                    else if (dateDiff == 1)
                                                    {
                                                        returnDate = "Posted 1 day ago";
                                                    }
                                                    else if (dateDiff <= 7)
                                                    {
                                                        returnDate = $"Posted {dateDiff} days ago";
                                                    }
                                                    else
                                                    {
                                                        returnDate = date.ToString("MMMM dd yyyy");
                                                    }
                                                }
                                                @Html.Raw(returnDate)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                }
        </div>

<!--Ad unit N2-->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7010150994074481"
            crossorigin="anonymous"></script>
    <!-- Flat Ad Unit -->
    <ins class="adsbygoogle"
            style="display:block"
            data-ad-client="ca-pub-7010150994074481"
            data-ad-slot="6187172230"
            data-ad-format="auto"
            data-full-width-responsive="true"></ins>
    <script>
            (adsbygoogle = window.adsbygoogle || []).push({});
    </script>

<!-- Call to action-->
<aside class="bg-primary bg-gradient rounded-3 p-4 p-sm-5 mt-5">
    <div class="d-flex align-items-center justify-content-between flex-column flex-xl-row text-center text-xl-start">
        <div class="mb-4 mb-xl-0">
            <div class="fs-3 fw-bold text-white">New articles, delivered to you.</div>
            <div class="text-white-50">Sign up for our emails for the latest updates.</div>
        </div>
        <div class="ms-xl-4">
            <div class="input-group mb-2">
                <div style="text-align: left" class="sender-form-field" data-sender-form-id="kzte3j42ejaywdh66hl"></div>
            </div>
            <div class="small text-white-50">We care about privacy, and will never share your data.</div>
        </div>
    </div>
</aside>