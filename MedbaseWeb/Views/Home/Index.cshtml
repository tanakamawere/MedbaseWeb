@model IEnumerable<MedbaseWeb.Models.Article>

@{
    ViewData["Title"] = "Home | Free Anatomy & Physiology MCQs";
    ViewData["Description"] = "Welcome to the home of Anatomy and Physiology multiple choice questions with answers. Also check out our Articles on studying tips, medical school and being a better student & person. Dive in";
    ViewData["Thumbnail"] = "http://medbase.co.zw/img/medbase_plain.jpeg";
    ViewData["Keywords"] = "Anatomy, Questions, MCQs, With Answers, Physiology, Medbase, Multiple Choice Questions";
}

<!-- Header-->
<header class="bg-white py-2 home-gradient">
    <partial name="MedbaseAnnouncement" />
    <div class="container px-5 medbase-font">
        <div class="row gx-5 align-items-center justify-content-center">
            <div class="col-lg-6 col-xl-6 col-xxl-6">
                <div class="my-5 text-center text-xl-start">
                    <h1 class="display-1 fw-bolder text-light mb-2">
                        Welcome to Medbase
                    </h1>
                    <p class="fw-normal text-black-50 mb-4">
                        The biggest repository of Anatomy & Physiology MCQs on the internet!😉
                    </p>
                    <br />
                    <div class="col d-grid gap-3 d-sm-flex justify-content-sm-center justify-content-xl-start">
                        <div class="dropdown">
                            <a class="btn btn-primary btn-lg px-4 me-sm-3 dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-expanded="false">
                            Get Started
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Questions" asp-action="Anatomy">Anatomy</a>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Questions" asp-action="Physiology">Physiology</a>
                            </div>
                        </div>
                        <a asp-controller="Home" asp-action="Downloads" class="btn btn-info text-center">
                            Download Android App
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-xxl-6 text-center">
               
                <img class="img-fluid rounded-3 my-5"
                     src="~/img/home_picture.jpg" alt="..." />
            </div>
        </div>
    </div>
</header>

<hr/>

<!-- Blog preview section-->
<section class="py-5">
    <div class="container px-5 my-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-8 col-xl-6 medbase-font">
                <div class="text-center">
                    <h2 class="fw-bolder">😁Want to learn something new?</h2>
                    <p class="lead fw-normal text-muted mb-5">New articles every <em>Monday at 6pm</em>, touching on topics like psychology, money, studying and book reviews.</p>
                </div>
            </div>
        </div>

        <div class="row gx-5">
            @foreach(Article item in Model)
                {
                        <div class="col-lg-4 mb-5">
                            <div class="card h-100 shadow border-0">
                                <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.ImageURL)" alt="..." />
                                <div class="card-body p-4">
                                    <a class="text-decoration-none link-dark stretched-link" asp-action="ArticleView" asp-route-id="@item.Id">
                                        <h5 class="card-title mb-3">
                                            @Html.DisplayFor(modelItem => item.Title)
                                        </h5>
                                    </a>
                                    <p class="card-text mb-0">
                                        @Html.DisplayFor(modelItem => item.Summary)
                                    </p>
                                </div>
                                <div class="card-footer p-4 pt-0 bg-transparent border-top-0">
                                    <div class="d-flex align-items-end justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <div class="small">
                                                <div class="fw-bold">@Html.DisplayFor(modelItem => item.Writer)</div>
                                                <div class="text-muted">
                                                @Html.Raw(item.DatePosted.ToString("dddd, dd MMMM yyyy"))
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                }
        </div>

        <div class="d-flex text-center justify-content-center">
            <a class="btn btn-outline-primary btn-lg px-4 me-sm-3" asp-controller="Articles" asp-action="Index">
                Go to Articles
            </a>
        </div>
    </div>
</section>