                                if (@question.AnswerB == true)
                                {
                                    answerB = "True";
                                }
                                else if (@question.AnswerB == false)
                                {

                                    answerB = "False";
                                }
                                else if (@question.AnswerB == null)
                                {
                                    answerB = "-";
                                }
                            }
                            else
                            {
                                
                            }
                        }
                        @(answerB)
                </p> 
                </div>
            </div>
            <!--Child3-->
            <div class="row">
                <div class="col">
                <p class="card-text">c) @question.ChildC</p> 
                </div>
                <div class="col col-2">
                <p class="card-text">
                        
                        @{
                            if (ViewBag.Visibility == 1)
                            {
                                if (@question.AnswerC == true)
                                {
                                    answerC = "True";
                                }
                                else if (@question.AnswerC == false)
                                {

